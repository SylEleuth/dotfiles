# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>, Mod3=<Spacebar>)
set $mod Mod4

# set default desktop layout (default is tiling)
# workspace_layout tabbed # <stacking|tabbed>

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 4
default_floating_border normal

# Hide borders
hide_edge_borders smart

# change borders
bindsym $mod+u border none
bindsym $mod+y border pixel 4
bindsym $mod+n border normal

# Keys
exec_always xmodmap -e "clear lock" #disable caps lock switch
exec_always xmodmap -e "keysym Caps_Lock = Escape" #set caps_lock as escape

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font xft:URWGothic-Book 11
# font xft:SauceCodePro Nerd Font bold 9
font xft:Hack Nerd Font bold 9

# Two monitors                             
exec_always --no-startup-id sh ~/.config/screenlayout/screen.sh

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym Mod3+Return exec termite 

# kill focused window
bindsym Mod3+q --release kill
