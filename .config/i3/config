bar {
    id bar-1
    output HDMI-A-0
    # font xft:Inconsolata for Powerline bold 12
    font xft:FantasqueSansmono Nerd Font bold 12
    position top
    tray_output HDMI-A-0
    i3bar_command i3bar
    status_command ~/.config/bumblebee-status/bumblebee-status\
    -m title weather cpu memory date time pacman pasink\
    -p traffic.showname="False" traffic.exclude="wlp2s0,lo" weather.showcity="false" disk.path="/home/eleuth/" disk.format="{left} {percent:05.02f}%" pacman.sum="true" pasink.limit="100%" memory.format="{percent:05.02f}%" datetime.format="%A%e %B %Y %H:%M:%S" date.format="%A %e %B %Y" time.format="%H:%M:%S" pacman.sum="true" pulseaudio.percent_change="5%"\
    -t gruvbox-powerline

    colors {
        background #282828
        statusline #fbf1c7
        separator  #504495

#	 	                    border  backgr. text
        focused_workspace  #282828 #282828 #fbf1c7
       	active_workspace   #282828 #282828 #7c6f64
        inactive_workspace #282828 #282828 #7c6f64
       	binding_mode       #282828 #282828 #fbf1c7
        urgent_workspace   #282828 #282828 #cc241d
	}
    strip_workspace_numbers yes
    bindsym button3 exec --no-startup-id jgmenu_run
}

