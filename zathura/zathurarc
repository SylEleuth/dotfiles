# general
set selection-clipboard clipboard

set font "JetBrainsMono Bold 10"

#zoom settings
set zoom-min 10
set guioptions ""

# Gruvbox colors
set recolor true
set default-bg "#282828"
set default-fg "#ebdbb2"
set recolor-lightcolor  "#ebdbb2"
set recolor-darkcolor "#3c3836"
set statusbar-bg "#1d2021"
set statusbar-fg "#ebdbb2"
set inputbar-fg "#ebdbb2"
set inputbar-bg "#282828"
set completion-highlight-fg "#ebdbb2"
set completion-highlight-bg "#83a598"
set highlight-color "#458588"
set highlight-active-color "#83a598"
set notification-fg "#fe8019"
set notification-bg "#282828"

# keybinds
map [normal] ZZ quit
map [normal] ZQ quit
map A zoom out
map S zoom in

map [normal] ; :

set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
